{% extends 'base.html.twig' %}

{% block title %}Availability{% endblock %}

{% block body %}
    <h1>Availability</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ availability.id }}</td>
            </tr>
            <tr>
                <th>Depart_date</th>
                <td>{{ availability.departDate ? availability.departDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Return_date</th>
                <td>{{ availability.returnDate ? availability.returnDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price_per_day</th>
                <td>{{ availability.pricePerDay }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ availability.status ? 'Available' : 'Not Available' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_availability_index') }}">back to list</a>

    <a href="{{ path('app_availability_edit', {'id': availability.id}) }}">edit</a>

    {{ include('availability/_delete_form.html.twig') }}
{% endblock %}
