{% extends 'base.html.twig' %}

{% block title %}Availability index{% endblock %}

{% block body %}
    <h1>Availability index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Depart_date</th>
                <th>Return_date</th>
                <th>Price_per_day</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for availability in availabilities %}
            <tr>
                <td>{{ availability.id }}</td>
                <td>{{ availability.departDate ? availability.departDate|date('Y-m-d') : '' }}</td>
                <td>{{ availability.returnDate ? availability.returnDate|date('Y-m-d') : '' }}</td>
                <td>{{ availability.pricePerDay }}</td>
                <td>{{ availability.status ? 'Available' : 'Not Available' }}</td>
                <td>
                    <a href="{{ path('app_availability_show', {'id': availability.id}) }}">show</a>
                    <a href="{{ path('app_availability_edit', {'id': availability.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_availability_new') }}">Create new</a>
    <a href="{{ path('homepage')}}">Page d'Accueil</a>
{% endblock %}
